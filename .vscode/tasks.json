// Setup for Competitive Programming 
// Also added Shortcuts to 
// - workbench.action.tasks.build for quick compile & run
// - workbench.action.tasks.test for testing with predefined file example.in
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile and run",
            "type": "shell",
            "windows": {
                "command": "cd ${fileDirname} && g++ -O3 -Wextra -Wall ${fileBasename} -o ${fileBasenameNoExtension}.exe && ${fileBasenameNoExtension}.exe" 
            },
            "presentation": {
                "reveal": "always",
                "focus": true,
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "test",
            "type": "shell",
            "windows": {
                "command": "cd ${fileDirname} && ${fileBasenameNoExtension}.exe < example.in"
            },
            "presentation": {
                "reveal": "always",
                "focus": true
            },
            "group":{
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}