{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "shell",
            "windows": {
                "command": "cd ${fileDirname} && g++ -O3 -Wextra -Wall -std=c++14 ${fileBasename} -o ${fileBasenameNoExtension}.exe"
            },
            "presentation": {
                "reveal": "always",
                "focus": true
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "test",
            "type": "shell",
            "windows": {
                "command": "cd ${fileDirname} && ${fileBasenameNoExtension}.exe"
            },
            "presentation": {
                "reveal": "always",
                "focus": true
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": []
        },
    ]
}